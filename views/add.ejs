<%- include("layout") %>

<h2 class="mb-4">Add Student</h2>

<form action="/add" method="POST">

  <div class="mb-3">
    <label class="form-label">Name</label>
    <input name="name" class="form-control" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Roll No</label>
    <input name="roll" type="number" class="form-control" required>
  </div>

  <h5>Marks</h5>

  <div class="mb-2">
    <label>English</label>
    <input class="form-control" name="english" type="number">
  </div>

  <div class="mb-2">
    <label>Maths</label>
    <input class="form-control" name="maths" type="number">
  </div>

  <div class="mb-2">
    <label>Science</label>
    <input class="form-control" name="science" type="number">
  </div>

  <button class="btn btn-success mt-3">Submit</button>
</form>

</div>
</body>
</html>
